<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff5f5f5"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/safds"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/wight">

        <ImageView
            android:id="@+id/leftimfan"
            android:layout_width="50.0dip"
            android:layout_height="20.0dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10.0dip" />

        <ImageView
            android:layout_width="15.0dip"
            android:layout_height="20.0dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10.0dip"
            android:background="@drawable/icon_arrow_l" />

        <TextView
            android:id="@+id/titles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="设置"
            android:textColor="@color/black"
            android:textSize="16.0sp" />

        <TextView
            android:id="@+id/addcar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="10.0dip"
            android:text="添加爱车"
            android:textColor="@color/black"
            android:textSize="16.0sp" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/lovecarrecycler"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/safds"
        android:layout_marginTop="10.0dip"
        android:background="@color/wight" />

    <RelativeLayout
        android:id="@+id/hasfsdf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/bgs"
            android:layout_width="100.0dip"
            android:layout_height="140.0dip"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bgs"
            android:layout_marginTop="5.0dip"
            android:text="您还没有添加爱车哦" />
    </RelativeLayout>
</RelativeLayout>