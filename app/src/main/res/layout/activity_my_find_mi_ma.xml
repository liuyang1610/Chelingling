<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/wight">

    <TextView
        android:id="@+id/quxiao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20.0dip"
        android:text="取消" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="70.0dip"
        android:layout_height="70.0dip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100.0dip"
        android:background="@drawable/icon_13" />

    <EditText
        android:id="@+id/phonenum"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_marginLeft="50.0dip"
        android:layout_marginRight="50.0dip"
        android:layout_marginTop="50.0dip"
        android:background="@null"
        android:digits="\ 1234567890"
        android:hint="请输入手机号"
        android:padding="10.0dip"
        android:textSize="15.0sp" />

    <View
        android:id="@+id/one"
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:layout_below="@+id/phonenum"
        android:layout_marginLeft="50.0dip"
        android:layout_marginRight="50.0dip"
        android:background="@color/blue" />

    <RelativeLayout
        android:id="@+id/yeyishen"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/one"
        android:layout_marginLeft="50.0dip"
        android:layout_marginRight="50.0dip"
        android:layout_marginTop="20.0dip">

        <EditText
            android:id="@+id/yanzhengcode"
            android:layout_width="200.0dip"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请输入验证码"
            android:padding="10.0dip"
            android:textSize="15.0sp" />

        <TextView
            android:id="@+id/dianjihuoqucode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="5.0dip"
            android:text="获取验证码" />
    </RelativeLayout>

    <View
        android:id="@+id/two"
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:layout_below="@+id/yeyishen"
        android:layout_marginLeft="50.0dip"
        android:layout_marginRight="50.0dip"
        android:background="@color/blue" />


    <EditText
        android:id="@+id/mimasa"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/two"
        android:layout_marginLeft="50.0dip"
        android:layout_marginRight="50.0dip"
        android:layout_marginTop="20.0dip"
        android:background="@null"
        android:inputType="textPassword"
        android:hint="请输入新密码"
        android:padding="10.0dip"
        android:textSize="15.0sp" />

    <View
        android:id="@+id/tree"
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:layout_below="@+id/mimasa"
        android:layout_marginLeft="50.0dip"
        android:layout_marginRight="50.0dip"
        android:background="@color/blue" />

    <TextView
        android:id="@+id/stattt"
        android:layout_width="250.0dip"
        android:layout_height="45.0dip"
        android:layout_below="@+id/tree"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10.0dip"
        android:layout_marginTop="50.0dip"
        android:background="@drawable/icon_19"
        android:gravity="center"
        android:text="立即修改"
        android:textColor="@color/wight"
        android:textSize="20.0sp" />

    <TextView
        android:id="@+id/tishi"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stattt"
        android:layout_marginLeft="100.0dip"
        android:layout_marginRight="100.0dip"
        android:background="#ffcfcece"
        android:gravity="center"
        android:paddingBottom="10.0dip"
        android:paddingTop="10.0dip"
        android:text="已给  13591869748用户发送验证码短信，请注意查收"
        android:textColor="@color/black"
        android:visibility="gone" />
</RelativeLayout>