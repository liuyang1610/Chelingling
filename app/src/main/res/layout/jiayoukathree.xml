<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/xuanzetaocand"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/wight">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15.0dip"
            android:text="选择套餐"
            android:textColor="@color/black"
            android:textSize="17.0sp" />

        <ImageView
            android:id="@+id/tii"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/right_blue" />

        <TextView
            android:id="@+id/taocannum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tii"
            android:text=""
            android:textColor="@color/blue"
            android:textSize="17.0sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/wight">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15.0dip"
            android:text="订单金额"
            android:textColor="@color/black"
            android:textSize="17.0sp" />

        <ImageView
            android:id="@+id/tii1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/right_blue"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/dingdanjine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tii1"
            android:text=""
            android:textSize="17.0sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/wight">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15.0dip"
            android:text="套餐优惠"
            android:textColor="@color/black"
            android:textSize="17.0sp" />

        <ImageView
            android:id="@+id/tii2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/right_blue"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/taocanyouhui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tii2"
            android:text=""
            android:textColor="#ffef0a0a"
            android:textSize="17.0sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/wight"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15.0dip"
            android:text="推荐码"
            android:textColor="@color/black"
            android:textSize="17.0sp" />

        <ImageView
            android:id="@+id/tii3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/right_blue"
            android:visibility="invisible" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tii3"
            android:background="@null"
            android:gravity="right"
            android:hint="推荐码(选填)"
            android:inputType="number"
            android:textColor="@color/blue"
            android:textCursorDrawable="@drawable/guangbiao"
            android:textSize="14.0sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/wight">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15.0dip"
            android:text="支付金额"
            android:textColor="@color/black"
            android:textSize="17.0sp" />

        <ImageView
            android:id="@+id/tii4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/right_blue"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/zhifujine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tii4"
            android:text=""
            android:textColor="#ffef0a0a"
            android:textSize="17.0sp" />
    </RelativeLayout>
</LinearLayout>