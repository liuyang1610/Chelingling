<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_address_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="12.5dip"
        android:src="@mipmap/icon_address_arrow_selected"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/item_address_tv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="13.299988dip"
        android:paddingLeft="4.0dip"
        android:paddingTop="13.299988dip"
        android:text="上海"
        android:textColor="@color/black_333333"
        android:textSize="15.299988sp" />
</LinearLayout>